@model DataLayer.Entities.Users.Role

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف کاربر</h1>
    </div>
     /.col-lg-12 
</div>

<div class="container alert alert-danger">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Name" />
        <h2>آیا از حذف نقش @Model.Name مطمئن هستید؟</h2>
        <p>
            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>

