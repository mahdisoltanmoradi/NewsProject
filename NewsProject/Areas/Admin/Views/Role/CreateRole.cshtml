@model DataLayer.Entities.Users.Role

@{ 
    List<DataLayer.Entities.Users.Permission> permissions = ViewData["Permission"] as List<DataLayer.Entities.Users.Permission>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نقش جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<hr />
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>

                <div class="panel panel-body">
                    <div class="form-group has-success">
                        <label class="control-label" for="inputSuccess">عنوان نقش</label>
                        <input type="text" asp-for="@Model.Name" class="form-control" id="inputSuccess">
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>

</div>
